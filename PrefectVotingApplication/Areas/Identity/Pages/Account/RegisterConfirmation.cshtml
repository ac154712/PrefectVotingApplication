@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Registration Successful";
}

<div class="text-center mt-5">
    <h1 class="display-5 text-success"> Registration Successful!</h1>
    <p class="lead mt-3">
        Thank you for registering. @* A confirmation link has been sent to your email address. *@
    </p>

    <p class="mt-4">
        After confirming your account, you can log in below.
    </p>

    <a asp-page="/Account/Login" class="btn btn-primary mt-2 px-4 py-2">
        Go to Login
    </a>
</div>
