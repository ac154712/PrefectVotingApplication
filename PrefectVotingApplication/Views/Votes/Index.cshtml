@model IEnumerable<PrefectVotingApplication.Models.Votes>

@{
    ViewData["Title"] = "Index";
}

<h1>Votes Log</h1>

@* 
<p>
    <a asp-action="Create">Create New</a>
</p> *@

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Voter)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Receiver)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Timestamp)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Voter.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Receiver.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Timestamp)
            </td>
                <td class="text-end" style="padding-right: 30px;">
                <a asp-action="Edit" asp-route-id="@item.VoteId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.VoteId">Details</a> |
                <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.VoteId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<div class="d-flex justify-content-center mt-3">
    @if ((int)ViewData["PageNumber"] > 1)
    {
        <a asp-action="Index"
           asp-route-pageNumber="@((int)ViewData["PageNumber"] - 1)"
           asp-route-searchString="@ViewData["CurrentFilter"]"
           asp-route-sortOrder="@ViewData["CurrentSort"]"
           class="btn btn-outline-primary me-2">Previous</a>
    }
    else
    {
        <button class="btn btn-outline-secondary me-2" disabled>Previous</button>
    }

    <span>Page @ViewData["PageNumber"] of @ViewData["TotalPages"]</span>

    @if ((int)ViewData["PageNumber"] < (int)ViewData["TotalPages"])
    {
        <a asp-action="Index"
           asp-route-pageNumber="@((int)ViewData["PageNumber"] + 1)"
           asp-route-searchString="@ViewData["CurrentFilter"]"
           asp-route-sortOrder="@ViewData["CurrentSort"]"
           class="btn btn-outline-primary ms-2">Next</a>
    }
    else
    {
        <button class="btn btn-outline-secondary ms-2" disabled>Next</button>
    }
</div>
