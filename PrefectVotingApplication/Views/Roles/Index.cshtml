@model IEnumerable<PrefectVotingApplication.Models.Role>

@{
    ViewData["Title"] = "Index";
}

<h1>Roles</h1>

@* <p>
    <a asp-action="Create">Create New</a>
</p> *@
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RoleName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VoteWeight)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RoleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VoteWeight)
            </td>
                <td class="text-end" style="padding-right: 30px;">
                    <a asp-action="Details" asp-route-id="@item.RoleId">Details</a> |
                    <a class="btn btn-sm btn-danger"  asp-action="Edit" asp-route-id="@item.RoleId">Edit</a> 
            </td>
        </tr>
}
    </tbody>
</table>
