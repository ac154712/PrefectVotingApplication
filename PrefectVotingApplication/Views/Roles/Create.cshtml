@model PrefectVotingApplication.Models.Role

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Role</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @Html.LabelFor(model => model.RoleName, htmlAttributes: new { @class = "control-label" })
                @Html.DropDownListFor(model => model.RoleName, (SelectList)ViewBag.RoleNameList, "-- Select Role --", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.RoleName, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label asp-for="VoteWeight" class="control-label"></label>
                <input asp-for="VoteWeight" class="form-control" />
                <span asp-validation-for="VoteWeight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
