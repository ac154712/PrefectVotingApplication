@model IEnumerable<PrefectVotingApplication.Areas.Identity.Data.PrefectVotingApplicationUser>
@{
    ViewData["Title"] = "Index";
    var pageNumber = (int)ViewData["PageNumber"];
    var totalPages = (int)ViewData["TotalPages"];
    var viewMode = ViewData["ViewMode"]?.ToString() ?? "grid";

}
<style>
    .pagination-footer {
        margin-top: auto;
        padding: 20px 0;
        text-align: center;
    }
</style>
@* search *@
<form asp-action="Index" method="get" class="mb-3">
    <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" placeholder="Search..." class="form-control d-inline" style="width:250px;" />
    <button type="submit" class="btn btn-primary">Search</button>
    <a asp-action="Index" class="btn btn-secondary">Reset</a>
</form>



@* made a grid  view *@
<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Select Your Prefects</h2>

    <div>
        <a asp-action="Index" asp-route-viewMode="grid" class="btn btn-outline-dark me-2 @(viewMode=="grid" ? "active" : "")">Grid View</a>
        <a asp-action="Index" asp-route-viewMode="list" class="btn btn-outline-dark @(viewMode=="list" ? "active" : "")">List View</a>
    </div>
</div>

<hr />

@* adds prodile if user doesn't have in grid view' *@
@if (viewMode == "grid")
{
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-4">
        @foreach (var PrefectVotingApplicationUser in Model)
        {
            <div class="col">
                <div class="card h-100 text-center shadow-sm">
                    <img src="@(string.IsNullOrEmpty(PrefectVotingApplicationUser.ImagePath) ? Url.Content("~/images/user-default.png") : Url.Content(PrefectVotingApplicationUser.ImagePath))"
                         class="card-img-top" style="height:200px; object-fit:cover;" />
                    <div class="card-body">
                        <h5 class="card-title">@PrefectVotingApplicationUser.FirstName @PrefectVotingApplicationUser.LastName</h5>
                        <button class="btn btn-primary">Vote</button>
                        <a asp-action ="Details" asp-route-id="@PrefectVotingApplicationUser.Id" button class="btn btn-outline-secondary">...</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else if (viewMode == "list")
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Student ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Description</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var PrefectVotingApplicationUser in Model)
            {
                <tr>
                    <td>@PrefectVotingApplicationUser.Id</td>
                    <td>@PrefectVotingApplicationUser.FirstName</td>
                    <td>@PrefectVotingApplicationUser.LastName</td>
                    <td>@PrefectVotingApplicationUser.Email</td>
                    <td>@PrefectVotingApplicationUser.Description</td>
                    <td>
                        <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@PrefectVotingApplicationUser.Id">Vote</a>
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@PrefectVotingApplicationUser.Id">✖</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<div class="pagination-footer">
    @if (pageNumber > 1)
    {
        <a asp-action="Index" asp-route-pageNumber="@(pageNumber - 1)" asp-route-searchString="@ViewData["CurrentFilter"]" asp-route-viewMode="@ViewData["ViewMode"]" class="btn btn-outline-primary me-2">Previous</a>
    }
    <span>Page @pageNumber of @totalPages</span>
    @if (pageNumber < totalPages)
    {
        <a asp-action="Index" asp-route-pageNumber="@(pageNumber + 1)" asp-route-searchString="@ViewData["CurrentFilter"]" asp-route-viewMode="@ViewData["ViewMode"]" class="btn btn-outline-primary ms-2">Next</a>
    }
</div>

